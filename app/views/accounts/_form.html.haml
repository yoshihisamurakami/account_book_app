.row
  .col-md-6.col-md-offset-3
    = form_for(@account) do |f|
      = render 'shared/error_messages', object: f.object

      = f.label "口座名"
      = f.text_field :name, class: 'form-control margin_bottom'

      = f.label "コメント"
      = f.text_field :comment,  class: 'form-control margin_bottom'

      = f.submit submit_label, class: "btn btn-primary btn_admin"
