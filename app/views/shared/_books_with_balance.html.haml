%div.books_list_area
  %table.table.table-hover.books_list
    %thead
      %tr
        %th 日付
        %th 入力者
        %th 入出金
        %th カテゴリ
        %th 摘要
        %th 入金
        %th 出金
        %th.center 共通
        %th.center 事業
        %th.center 特別
        %th 残高
    %tbody
      - unless @carryover.zero?
        %tr
          %td= '-'
          %td= '-'
          %td= '入金'
          %td= '-'
          %td= '繰り越し'
          %td.books_number= @carryover.to_s(:delimited)
          %td= '-'
          %td.center= '-'
          %td.center= '-'
          %td.center= '-'
          %td.books_number= @carryover.to_s(:delimited)
      - books.each do |book|
        %tr
          %td= book.books_date
          %td= book.user.name
          %td= book.deposit? ? '入金' : '出金'
          %td= book.category.nil? ? '-' : book.category.name
          %td= book.summary
          %td.books_number= book.deposit? ? book.amount.to_s(:delimited) : '-'
          %td.books_number= book.deposit? ? '-' : book.amount.to_s(:delimited)
          %td.center= book.common? ? 'o' : '-'
          %td.center= book.business? ? 'o' : '-'
          %td.center= book.special? ? 'o' : '-'
          %td.books_number= get_balance(book).to_s(:delimited)
